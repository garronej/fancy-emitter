{
  "name": "fancy-emitter",
  "author": "Maurice Prosper",
  "description": "A new take on JavaScript's EventEmitter class. Makes use of types and the newest JS features.",
  "keywords": [
    "event",
    "emitter",
    "eventemitter",
    "strict"
  ],
  "version": "0.1.2",
  "scripts": {
    "build:dev": "simplifyify index.ts -s emitter -o dist/umd/index.js --debug --bundle",
    "build:prod": "terser dist/umd/index.js -cmo dist/umd/index.min.js",
    "build:esm": "tsc -t esnext -m es2015 --outDir dist/esm index",
    "postbuild:esm": "tsc-esm dist/esm/index.js dist/esm/**/*.js",
    "build": "npm run build:dev && npm run build:prod && npm run build:esm",
    "test": "mocha -r ts-node/register test/*.ts",
    "prerelease": "npm run build",
    "release": "np"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/mocha": "^5.2.6",
    "@types/should": "^13.0.0",
    "esm": "^3.2.25",
    "mocha": "^6.1.2",
    "np": "^5.0.1",
    "should": "^13.2.3",
    "simplifyify": "^7.0.2",
    "terser": "^3.17.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "tsc-esm": "^1.0.2"
  }
}
