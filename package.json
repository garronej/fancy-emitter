{
  "name": "fancy-emitter",
  "author": "Maurice Prosper",
  "description": "A new take on JavaScript's EventEmitter class. Makes use of types and the newest JS features.",
  "keywords": [
    "event",
    "emitter",
    "eventemitter",
    "strict"
  ],
  "version": "0.1.1",
  "scripts": {
    "build:dev": "simplifyify index.ts -s emitter -o dist/umd/index.js --debug --bundle",
    "build:prod": "terser dist/umd/index.js -cmo dist/umd/index.min.js",
    "build": "npm run build:dev && npm run build:prod",
    "test": "mocha -r ts-node/register -u exports test.ts",
    "prerelease": "tsc && npm run build",
    "release": "np"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/mocha": "^5.2.6",
    "mocha": "^6.1.2",
    "np": "^5.0.1",
    "should": "^13.2.3",
    "simplifyify": "^7.0.2",
    "terser": "^3.17.0",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.3"
  }
}
